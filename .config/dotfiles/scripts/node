#!/usr/bin/env bash
# Author: Alalilacias
# Description: Installs Node using fnm
# Syntax: source "$HOME/.dotfiles/.config/dotfiles/scripts/node"
# Version: 0.2

set -euo pipefail

if ! command -v fnm &>/dev/null; then
  log_error "fnm is not installed. Please install it before running this script."
  return 1
fi

log_debug "Installing latest Node.js LTS via fnm..."
fnm install --lts
fnm use -- --lts
fnm default lts

log_debug "Node.js installation complete."
